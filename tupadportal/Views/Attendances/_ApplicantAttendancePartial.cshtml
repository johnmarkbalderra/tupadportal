@model IEnumerable<tupadportal.Models.Attendance>

@{
    var firstAttendance = Model.FirstOrDefault();
    if (firstAttendance != null)
    {
        var applicantName = $"{firstAttendance.Applicant.FirstName} {firstAttendance.Applicant.LastName}";
    }
}

@if (firstAttendance != null)
{
    <h3>@firstAttendance.Applicant.FirstName @firstAttendance.Applicant.LastName</h3>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Date</th>
            <th>Time In AM</th>
            <th>Time Out AM</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var attendance in Model)
        {
            <tr>
                <td>@attendance.Date.ToString("MMMM dd, yyyy")</td>
                <td>@(attendance.TimeInAM.HasValue ? attendance.TimeInAM.Value.ToString("hh:mm tt") : "N/A")</td>
                <td>@(attendance.TimeOutAM.HasValue ? attendance.TimeOutAM.Value.ToString("hh:mm tt") : "N/A")</td>
            </tr>
        }
    </tbody>
</table>
