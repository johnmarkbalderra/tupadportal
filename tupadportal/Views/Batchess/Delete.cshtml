@model tupadportal.Models.Batch

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Batch</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BatchName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BatchName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateTime)
        </dd>

        @* Remove the Address-related section since Batch no longer has an Address property *@
        @* If needed, you can display related information from Applicants instead *@
        <dt class="col-sm-2">Applicants' Barangays</dt>
        <dd class="col-sm-10">
            @if (Model.Applicants != null && Model.Applicants.Any())
            {
                <ul>
                    @foreach (var applicant in Model.Applicants)
                    {
                        <li>@applicant.Barangay</li>
                    }
                </ul>
            }
            else
            {
                <p>No applicants available for this batch.</p>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="BatId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
